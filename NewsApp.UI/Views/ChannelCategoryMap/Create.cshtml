@model CreateChannelCategoryMapCommandRequestViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "ChannelCategoryMap", FormMethod.Post))
{
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Project Add</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">ChannelCategoryMap Add</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>
        <section class="content">
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">General</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="col-lg-6">
                                @Html.Label("CategoryId")
                                @Html.DropDownListFor(model => model.CategoryId, Model.CategoryIds, "--Select an Type--",
                                new { type = "text", @class = "form-control", required = "required", @placeholder = "CategoryId" })
                                @Html.ValidationMessageFor(c => c.CategoryIds.First().Value)
                            </div>
                            <div class="col-lg-6">
                                @Html.Label("ChannelId")
                                @Html.DropDownListFor(model => model.ChannelId, Model.ChannelIds, "--Select an Type--",
                                new { type = "text", @class = "form-control", required = "required", @placeholder = "ChannelId" })
                                @Html.ValidationMessageFor(c => c.ChannelIds.First().Value)
                            </div>
                            
                            <div class="form-group">
                                <label for="inputProjectLeader">Xml Path</label>
                                @Html.TextBoxFor(m => m.XmlPath)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <input style="position:center" type="submit" value="Create new ChannelCategoryMap" class="btn btn-success float-right">
                </div>
            </div>
        </section>
    </div>


}


